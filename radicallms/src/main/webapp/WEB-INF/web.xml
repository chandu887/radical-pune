<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
    id="WebApp_ID" version="2.5">
    
  <display-name>Archetype Created Web Application</display-name>
  
<!--   <context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>/WEB-INF/applicationContext.xml</param-value>
	</context-param>--> 
	
	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>
    <filter>
        <filter-name>UserAccess Filter</filter-name>
        <filter-class>
            com.radical.lms.filter.UserAccessFilter
        </filter-class>

        <init-param>
            <param-name>login-url</param-name>
            <param-value>/loginpage</param-value>
        </init-param>

        
        <init-param>
            <param-name>allowed-adminUrls</param-name>
            <param-value>/,favicon.ico,/dashboard,/logout,/testCron,/addlead,/changeStatus,/filterByDateAndCourse,/getLeadInfo,/editlead,/downloadLeadsToSheet,/clearFilter,/createMailTemplate,/sendTemplatedMail,/nonTemplatedEmailOrSms,/viewAgents,/getAgentInfo,/addAgent,/editAgent,/updateAgent,/isUserExits,/viewCategories,/updateCategory,/addCategory,/viewCourses,/updateCourse,/isCourseExits,/addCourse,/leadsBulkUpload,/uploadBulkLeads,/downloadFile</param-value>
        </init-param>
        
        <init-param>
            <param-name>allowed-allUrls</param-name>
            <param-value>/,/favicon.ico,/resources/images/*,/resources/js/*.js,/resources/css/*.css,/resources/fonts/*,/login,/getModelsList,/getCountryList,/testCron,/getPaginationData,/getShowingData,/getPaginationData,/getShowingData,/getCoursesBasedOnCategoryId,/searchByCourse,/viewTemplatedMail,/editMailTemplate,/filterByDateAndCourse,/viewAgents,/getAgentInfo,/addAgent,/editAgent,/updateAgent,/isUserExits,/viewCategories,/updateCategory,/addCategory,/viewCourses,/updateCourse,/isCourseExits,/addCourse,/leadsBulkUpload,/uploadBulkLeads,/downloadFile</param-value>
        </init-param>
    </filter>
    
    <filter-mapping>
           <filter-name>UserAccess Filter</filter-name>
           <url-pattern>/*</url-pattern>
    </filter-mapping>
    
    
    
    <servlet>
        <servlet-name>radicallms</servlet-name>
        <servlet-class>
            org.springframework.web.servlet.DispatcherServlet
        </servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>radicallms</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>
    <context-param>
	    <param-name>contextConfigLocation</param-name>
	    <param-value>
	    /WEB-INF/radicallms-servlet.xml
	    </param-value>
	</context-param> 
</web-app>
